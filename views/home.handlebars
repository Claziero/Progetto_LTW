<!-- Body della main page -->
<body>
    <!-- Includi l'header -->
    {{> header}}

    <!-- PuÃ² essere utile fare il fade-in dei blocchi evento-->

    <script>
        $(document).ready(function(){
            $(".listing").fadeIn(1000);

            $(".listing").hover(function(){
                $(".buttons-par", this).fadeIn();
            }, function(){
                $(".buttons-par", this).fadeOut();
            });
        });
    </script>
    

    <!-- Per ogni elemento della query crea un nuovo elemento -->
    {{#each mainList}}
        {{> main-listing}}
    {{/each}}

    <!-- Includi il footer -->
    {{> footer}}
</body>