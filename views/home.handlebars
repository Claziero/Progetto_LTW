<!-- Body della main page -->
<body>
  <!-- Includi l'header -->
  {{> header}}

  <!-- Fading dei blocchi evento -->
  <script>
    $(document).ready(function () {
      $(".listing").fadeIn(1500);
    });
  </script>

  <!-- Se l'utente Ã¨ loggato allora fai comparire i pulsanti, altrimenti no -->
  {{#if log}}
  <script>
    $(document).ready(function () {
      $(".listing").click(function () {
        // Condizioni di apparizione pulsanti specifiche per eventi passati
        if ($("#info", this).css("display") != "none" || $("#prenota", this).hasClass("btn")) {
          if ($(".card-inner", this).css("transform") == "none") {
            // Ruota tutti gli altri nella posizione originale
            $(".card-inner").css("transform", "none");
            // Ruota l'elemento
            $(".card-inner", this).css("transform", "rotateY(180deg)");
          }
          else
            // Riporta l'elemento in posizione originale
            $(".card-inner", this).css("transform", "none");
        }
      });
    });
  </script>
  {{/if}}

  <!-- Parte di ricerca: se non ci sono risultati allora stampa l'errore -->
  {{#if error}}
  <div class="mb-3 text-danger text-center" id="message">{{error}}</div>
  {{/if}}

  <!-- Per ogni elemento della query crea un nuovo elemento -->
  <div class="container" id="mainSection">
    <div class="card-deck mt-3">
      {{#each mainList}}
        {{> main-listing}}
      {{/each}}
    </div>
  </div>

  <!-- Includi il footer -->
  {{> footer}}
</body>
