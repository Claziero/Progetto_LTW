<!-- Usare il foglio di stile style-profile.css per tutti gli stili usati -->

<body>
    {{> header}}

    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation

        <div class="row">
            <div class="col-xl-3">
                <!-- Profile picture card--
                <div class="card mb-4 mb-xl-0">
                    <div class="card-body text-center">
                        Menu di navigazione
                        <!-- TBC --
                    </div>
                </div>
            </div>


            <!-- cambio layout-->

        <div class="col-xl-9">
            <ul class="nav nav-tabs" id="prof-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="prenotazioniTab" data-toggle="tab" onclick="showPrenotazioni()"
                        role="tab" aria-controls="home" aria-selected="true">Prenotazioni</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="creaTab" data-toggle="tab" onclick="showEvento()" role="tab"
                        aria-controls="creaEvento" aria-selected="true">Crea nuovo evento </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" id="adminTab" data-toggle="tab" onclick="showAdmin()" role="tab"
                        aria-controls="admin" aria-selected="false">Gestione organizzatori</a>

                </li>
            </ul>

            <div class="tab-content" id="prof-tabContent">
                <div class="tab-pane fade" id="prenotazioni" role="tabpanel" aria-labelledby="prenotazioni-tab">
                    <br>
                    {{#if notEmpty}}
                    <table class="table">
                        <!-- Header della tabella -->
                        <tr>
                            <th>Titolo evento</th>
                            <th>Data evento</th>
                            <th>Azioni</th>
                        </tr>

                        <!-- Dati prenotazioni -->
                        {{#each prenotazioni}}
                        <tr>
                            <td>{{titolo}}</td>
                            <td>{{dataora}}</td>
                            <td>
                                <button class="btn btn-danger" onclick="unbook({{id}})">Disdici</button>
                            </td>
                        </tr>
                        {{/each}}
                    </table>

                    {{else}}
                    Non ci sono prenotazioni recenti.
                    {{/if}}

                </div>

                <div class="tab-pane fade show active" id="creaEvento" role="tabpanel" aria-labelledby="creaEvento-tab">

                    {{#if privilegi}}
                    <br>
                    <form action="/createEvent" method="post" class="form-signin" onsubmit="return validaForm()">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                    <input type="text" class="form-control" id='eventTitle' placeholder="Titolo Evento">
                                </div>

                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                    <label for="eventType">Tipo</label>
                                    <select name="type" id="eventType" required>
                                        <option value="" selected></option>
                                        <option value="singolo">Singolo</option>
                                        <option value="torne">Torneo</option>
                                        <option value="altro">Altro</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="form-group col-md-6">

                            <div class="form-outline mb-3" id="dateType">
                                <!-- Data evento -->
                                <label for="data">Data e ora</label>
                                <input type="datetime-local" id="dataTime" name="dataTime" onclick="setDates()">
                            </div>
                            <hr>
                        </div>
                    </form>

                    {{else}}
                    Chiedi a un admin per organizzare il tuo evento
                    {{/if}}
                </div>

                <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="admin-Tab">
                    <div class="card mb-4">

                    </div>
                </div>

            </div>
        </div>
    </div>


    <!-- Includi il footer -->
    {{> footer}}

</body>