<div class="listing jumbotron container border border-dark rounded mb-3" id="e{{id}}">
    <h3 class="display-6">{{titolo}}</h3>

    <!-- Messaggio di errore -->
    <div class="mb-3 text-danger" id="message">{{error}}</div>

    <p class="lead">Evento {{tipo}} il {{dataora}}</p>
    <p class="lead">Posti disponibili: {{postidisponibili}}</p>
    <hr class="my-1">
    <p>{{descrizione}}.</p>
    <p class="lead buttons-par">
        <a href="#" class="px-1">
            <button class="btn btn-info btn-lg" onclick="info('{{id}}')">Maggiori informazioni</button>
        </a>
        <a href="#" class="px-1">
            <button class="btn btn-prenota btn-lg" onclick="prenota({{id}})">Prenota</button>
        </a>
    </p>
</div>
