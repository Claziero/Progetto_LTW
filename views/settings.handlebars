<!-- Usare il foglio di stile style-settings.css per tutti gli stili usati -->

<body>
    {{> header}}

    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->

        <hr class="mt-0 mb-4">
        <div class="row">
            <!-- Rimozione account (solo utenti standard) -->
            {{#if privilegi}}
            <div class="col-xl-4">
                <div class="card mb-4">
                    <div class="card-header">Il tuo profilo</div>
                    <div class="card-body">
                        Rimuovi il mio account.<br>
                        Attenzione: continuando il tuo account verr√† rimosso dai nostri sistemi e perderai
                        tutte le prenotazioni.<br>

                        <!-- Rimuovi l'account -->
                        <a href="/deleteUser">
                            <button class="btn btn-danger mt-3" id='btnDeleteAccount'>Elimina il mio account</button>
                        </a>
                    </div>
                </div>
            </div>
            {{/if}}

            <!-- Sezione account (dimensioni diverse se utente standard/organizzatore) -->
            {{#if privilegi}}
            <div class="col-xl-8">
            {{else}}
            <div class="col-xl-12">
            {{/if}}
                <!-- Form -->
                <div class="card mb-4">
                    <div class="card-header">Il tuo account
                        <button class="btn btn-primary" onclick="enableChanges()" id="btnModifica">Modifica</button>
                    </div>
                    <div class="card-body">
                        <form action="/changeUser" method="POST" onsubmit="return validaForm()">
                            <div class="row gx-3 mb-3">
                                <!-- Nome -->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="nome">Nome</label>
                                    <input class="form-control" id="nome" name="nome" type="text" 
                                        placeholder="Inserire nome" value="{{nome}}" readonly/>
                                </div>

                                <!-- Cognome -->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="cognome">Cognome</label>
                                    <input class="form-control" id="cognome" name="cognome" type="text" 
                                        placeholder="Inserire cognome" value="{{cognome}}" readonly/>
                                </div>
                            </div>

                            <div class="mb-3">
                                <!-- Data di nascita -->
                                <label class="small mb-1" for="data">Data di nascita</label> 
                                <input class="form-control" type="date" id="data" name="data" value="{{data}}" readonly/>
                            </div>

                            <div class="mb-3">
                                <!-- Password attuale -->
                                <label class="small mb-1" for="oldPsw">Password attuale</label>
                                <div class="input-group">
                                    <input class="form-control" type="password" id="oldPsw" name="oldPsw" readonly
                                        placeholder="Inserisci la password attuale"/>

                                    <!-- Mostra la password -->
                                    <div class="input-group-text" onclick="showSetPwd0()"><i class="fa fa-eye" id="pwdEye0"></i></div>
                                </div>
                            </div>

                            <div class="row gx-3 mb-3">
                                <!-- Password nuova -->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="password">Nuova password</label>
                                    <div class="input-group">
                                        <input class="form-control" id="password" type="password" name="password" readonly
                                            placeholder="Inserisci una nuova password" onchange="checkLghSet()"/>

                                        <!-- Mostra la password -->
                                        <div class="input-group-text" onclick="showSetPwd1()"><i class="fa fa-eye" id="pwdEye1"></i></div>
                                    </div>
                                </div>

                                <!-- Ripeti password nuova -->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="password_repeat">Ripeti password</label>
                                    <div class="input-group">
                                        <input class="form-control" id="password_repeat" type="password" name="psw-repeat" readonly
                                            placeholder="Ripeti password" onchange='checkPwdMatch()'/>

                                        <!-- Mostra la password -->
                                        <div class="input-group-text" onclick="showSetPwd2()"><i class="fa fa-eye" id="pwdEye2"></i></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Messaggio di errore -->
                            <div class="form-outline mb-3 text-danger" id='message'>{{error}}</div>
                            
                            <!-- Salva le modifiche -->
                            <button class="btn btn-primary" id='btnSubmit' type="submit" hidden>Conferma</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Includi il footer -->
    {{> footer}}
</body>