<!-- Usare il foglio di stile style-settings.css per tutti gli stili usati -->

<body>
    {{> header}}

    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->

        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="" alt="">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG/PNG fino a 5 MB</div>
                        <!-- Profile picture upload button-->
                        <span>Carica l'immagine<input type="file" id="photo" name="photo"
                                accept="image/png, image/jpeg"></span>
                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Il tuo account</div>
                    <div class="card-body">
                        <form action="/changeUser" method="POST" onsubmit="return validaForm()">
                            <!-- Form Row  -->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (nome)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="nome">Nome</label>
                                    <input class="form-control" id="nome" name="nome" type="text"
                                        placeholder="Inserire nome" />
                                </div>
                                <!-- Form Group (cognome)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="cognome">Cognome</label>
                                    <input class="form-control" id="cognome" name="cognome" type="text"
                                        placeholder="Inserire cognome" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <!-- Data di nascita -->
                                <label class="small mb-1" for="data">Data di nascita</label>
                                <input class="form-control" type="date" id="data" name="data" />
                            </div>

                            <div class="mb-3">
                                <!-- Password attuale -->
                                <label class="small mb-1" for="oldPsw">Password attuale</label>
                                <input class="form-control" type="password" id="oldPsw" name="oldPsw"
                                    placeholder="Inserisci la password attuale" />
                            </div>

                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="password">Nuova password</label>
                                    <input class="form-control" id="password" type="password" name="password"
                                        placeholder="Inserisci una nuova password" onchange="checkLghSet" />
                                </div>

                                <div class="col-md-6">
                                    <label class="small mb-1" for="password_repeat">Ripeti password</label>
                                    <input class="form-control" id="password_repeat" type="password" name="psw-repeat"
                                        placeholder="Ripeti password" onchange='checkPwdMatch()'/>
                                </div>
                            </div>

                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <input class="form-check-input" type="checkbox" name="showPsw2"
                                        onclick="showSetPwd1()">
                                    <label for="password_repeat"><i class="fa fa-eye"></i></label>
                                </div>

                                <div class="col-md-6">
                                    <input class="form-check-input" type="checkbox" name="showPsw2"
                                        onclick="showSetPwd2()">
                                    <label for="password_repeat"><i class="fa fa-eye"></i></label>
                                </div>
                            </div>

                            <!-- Messaggio di errore -->
                            <div class="form-outline mb-3 text-danger" id='message'>{{error}}</div>

                            <!-- Save changes button-->
                            <button class="btn btn-primary" type="submit">Conferma</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Includi il footer -->
    {{> footer}}
</body>