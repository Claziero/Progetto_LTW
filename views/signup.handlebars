<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <!-- Form -->
              <form action="/signup-ok" method="post">
                <h2>Sign Up</h2>
                <p>Compilare il form per creare un nuovo account!</p>
                <hr>
                
                <!-- Nome e cognome -->
                <div class="form-outline mb-4">
                  <div class="row">
                    <div class="col-xs-6"><input type="text" class="form-control" name="nome" placeholder="Nome"
                        required="required"></div>
                    <div class="col-xs-6"><input type="text" class="form-control" name="cognome" placeholder="Cognome"
                        required="required"></div>
                  </div>
                </div>

                <!-- Data di nascita e sesso -->
                <div class="form-outline mb-4">
                  <label for="data" <b>data di nascita</b></label>
                  <input type="date" id="data" name="data" required>
                </div>
                <div class="form-outline mb-4">
                  <form class="form-select">
                    <label class="my-1 mr-2" for="sesso">sesso</label>
                    <select class="sesso" id="sesso" required>
                      <option value="" selected></option>
                      <option value="M">maschio</option>
                      <option value="F">femmina</option>
                      <option value="N">non binario</option>
                      <option value="U">altro</option>
                    </select>
                </div>

                <!-- email-->
                <div class="form-outline mb-4">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
                    <input type="email" class="form-control" name="email" placeholder="Email " required="required">
                  </div>
                </div>

                <!-- password-->
                <div class="form-outline mb-4">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" name="password" placeholder="Password" id="password"
                      onkeyup='checkLgh();' required="required">
                  </div>

                  <input class="form-check-input" type="checkbox" value="" name="showPsw" id="showPassword"
                    onclick="funshowPsw()">
                  <label class="form-check-label" for="flexCheckDefault"> mostra</label>
                </div>

                <!--password repeat-->
                <div class="form-outline mb-4">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="fa fa-lock"></i>
                      <i class="fa fa-check"></i>
                    </span>
                    <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password"
                      id="password_repeat" onkeyup='check();' required="required">
                  </div>
                  <input class="form-check-input" type="checkbox" value="" name="showPsw2" onclick="funshowPsw2()">
                  <label class="form-check-label" for="flexCheckDefault"> mostra</label>

                </div>
                <div class="form-outline mb-4">
                  <span id='message'></b></span>
                </div>
                <div class="form-outline mb-4">
                  <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a
                      href="#">Terms of
                      Use</a> &amp; <a href="#">Privacy Policy</a></label>
                </div>
                <div class="form-outline mb-4">
                  <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                </div>
              </form>
              <div class="text-center">Already have an account? <a href="login">Login here</a></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>