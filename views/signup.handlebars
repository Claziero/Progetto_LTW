<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <a href="/" class="text-center">
                <!-- Aspetto dell'immagine originale: 3.66:1 -->
                <img src="img/icon-transparent.png" alt="home" width="250" height="68" />
              </a>

              <!-- Form -->
              <form onsubmit="return validaForm()" action="/signupValid" method="post">
                <h2>Registrati</h2>
                <p>Compilare il form per creare un nuovo account!</p>
                <hr>

                <!-- Nome e cognome -->
                <div class="form-outline mb-4">
                  <input type="text" class="form-control" name="nome" placeholder="Nome" required />
                  <input type="text" class="form-control" name="cognome" placeholder="Cognome" required />
                </div>

                <div class="form-outline mb-4">
                  <!-- Data di nascita -->
                  <label for="data">Data di nascita</label>
                  <input type="date" id="data" name="data" onchange="checkData()" />

                  <!-- Sesso -->
                  <label class="my-1" for="sesso">Sesso</label>
                  <select name="sesso" id="sesso" required>
                    <option value="" selected></option>
                    <option value="M">maschio</option>
                    <option value="F">femmina</option>
                    <option value="U">altro</option>
                  </select>
                </div>

                <!-- Email -->
                <div class="form-outline mb-4 input-group">
                  <label for="email"><i class="fa fa-paper-plane"></i></label>
                  <input type="email" class="form-control" name="email" placeholder="Email" required />
                </div>

                <!-- Password -->
                <div class="form-outline mb-4 input-group">
                  <label for="password"><i class="fa fa-lock"></i></label>
                  <input type="password" class="form-control" name="password" placeholder="Password" id="password"
                    onchange='checkLgh()' required />

                  <!-- Mostra password -->
                  <input class="form-check-input" type="checkbox" name="showPsw" onclick="showPwd()">
                  <label for="password"><i class="fa fa-eye"></i></label>
                </div>

                <!-- Password repeat -->
                <div class="form-outline mb-4 input-group">
                  <label for="password_repeat"><i class="fa fa-lock"></i></label>
                  <input type="password" class="form-control" name="password_repeat" placeholder="Conferma Password"
                    id="password_repeat" onchange='checkPwdMatch()' required />

                  <!-- Mostra password -->
                  <input class="form-check-input" type="checkbox" name="showPsw2" onclick="showPwd2()">
                  <label for="password_repeat"><i class="fa fa-eye"></i></label>
                </div>

                <!-- Messaggio di errore -->
                <div class="form-outline mb-4 text-danger" id='message'>{{error}}</div>

                <!-- Termini e condizioni -->
                <div class="form-outline mb-4">
                  <label class="checkbox-inline"><input type="checkbox" required />
                    Accetto i <a href="#">Termini d'uso e condizioni</a>
                  </label>
                </div>

                <!-- Bottone di conferma -->
                <div class="form-outline mb-4 text-center">
                  <button type="submit" class="btn btn-primary btn-lg">Registrati</button>
                </div>
              </form>

              <!-- Link di navigazione -->
              <div class="text-center">Sei gi√† registrato? <a href="login">Accedi</a></div>
              <div class="text-center">Torna alla <a href="/">Home</a></div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>